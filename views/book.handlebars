<body>

  <p>CREATE A REVIEW</p>
  
  <!--Bootstrap Form to Create a Review-->
  <div class="card" style="width: 18rem;">
  <img class="card-img-top">
  <div class="card-body">
    <h5 class="card-title">Read a Review</h5>
    <p class="card-text">View Your review here.</p>
      <!--Form to Create a book review-->
      <form id = "createReview">
            <div class="form-group">
              <label for="choose-a-book">Book Title</label>
              <input type="text" class="form-control" id="choose_book" aria-describedby="" placeholder="Book Title">
              <small id="Type a Book" class="form-text text-muted">Have we read the same books?</small>
            </div>
            <div class="form-group">
              <label for="Author">Author</label>
              <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Author">
            </div>
            <div class="form-group">
              <label for="Synopsis">Synopsis</label>
              <input type="text" class="form-control" id="synopsis" placeholder="Synopsis">
            </div>
            <div class="form-group">
              <label for="Page Count">Page Count</label>
              <input type="text" class="form-control" id="pageCount" placeholder="Page Count">
            </div>
            
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
      </form>
              

  </div>
</div>


